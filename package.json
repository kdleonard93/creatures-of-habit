		"@node-rs/argon2": "^2.0.0",
		"@oslojs/crypto": "^1.0.1",
		"@oslojs/encoding": "^1.1.0",
		"@posthog/cli": "^0.4.8",
		"@types/bcrypt": "^5.0.2",
		"arctic": "^2.2.2",
		"bcrypt": "^5.1.1",
