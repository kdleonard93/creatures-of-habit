		"tailwind-merge": "^2.5.4",
		"tailwind-variants": "^0.2.1",
		"tailwindcss": "^3.4.14",
		"tsx": "^4.19.2",
		"typescript": "^5.6.3",
		"vite": "^6.3.3",
		"vitest": "^2.1.4"
	},
	"dependencies": {
		"@libsql/client": "^0.14.0",
		"@node-rs/argon2": "^2.0.0",
		"@oslojs/crypto": "^1.0.1",
		"@oslojs/encoding": "^1.1.0",
		"@types/bcrypt": "^5.0.2",
		"arctic": "^2.2.2",
		"bcrypt": "^5.1.1",
		"cookie": "^1.0.2",
		"dotenv": "^16.4.5",
		"drizzle-orm": "^0.36.4",
		"esbuild": "^0.25.3",
		"posthog-js": "^1.222.0",
		"svelte-sonner": "^0.3.28",
		"typesync": "^0.14.1",
		"uuid": "^11.0.3",
		"zod": "^3.24.1"
