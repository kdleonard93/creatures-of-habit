{
	"name": "creatures-of-habit",
	"version": "0.0.1",
	"type": "module",
	"scripts": {
		"dev": "vite dev --port 5175",
		"build": "vite build",
		"preview": "vite preview",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"test:unit": "vitest",
		"test": "pnpm run test:unit -- --run",
		"test:rate-limit": "tsx scripts/test-rate-limiting.ts",
		"test:rate-limit:unit": "vitest src/tests/server/rateLimit.test.ts",
		"test:generate-quest-content": "tsx scripts/generate-quest-content.ts",
		"test:notifications": "tsx scripts/test-notifications.ts",
