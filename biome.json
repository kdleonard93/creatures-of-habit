{
	"$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
	"vcs": {
		"enabled": false,
		"clientKind": "git",
		"useIgnoreFile": false
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab",
		"lineWidth": 100,
		"include": ["scripts/**/*.js", "src/**/*.js"],
		"ignore": ["scripts/**/*.js"]
	},
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true
		}
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "single",
			"trailingCommas": "none"
		},
		"globals": ["browser", "node"]
	},
	"overrides": [
		{
			"include": ["**/*.svelte"]
		}
	],
	"files": {
		"ignore": ["build/", ".svelte-kit/", "dist/"]
	}
}
