{
	"$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
	"vcs": {
		"enabled": false,
		"clientKind": "git",
		"useIgnoreFile": false
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab",
		"lineWidth": 100,
		"include": ["src/**/*.{js,ts,svelte}"],
		"ignore": ["node_modules/**/*"]
	},
	"organizeImports": {
		"enabled": false
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"correctness": {
				"noUnusedVariables": "error",
				"noUndeclaredVariables": "error"
			},
			"suspicious": {
				"noExplicitAny": "warn",
				"noConsoleLog": "warn"
			},
			"style": {
				"useConst": "error",
				"useTemplate": "error"
			},
			"complexity": {
				"useLiteralKeys": "error"
			}
		}
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "single",
			"trailingCommas": "none"
		},
		"globals": ["browser", "node"]
	},
	"overrides": [],
	"files": {
		"ignore": [
			"build/",
			".svelte-kit/",
			"dist/",
			"**/*.svelte",
			"node_modules/",
			"src/tests/**/*",
			"scripts/**/*"
		]
	}
}
